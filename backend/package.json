{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/src/server.js",
  "scripts": {
    "build": "tsc --build",
    "switch:dev": "cp .env.dev .env",
    "switch:prod": "cp .env.prod .env",
    "start": "node ./dist/src/server.js",
    "dev": "cp .env.dev .env && nodemon --exec node --env-file='.env' -r ts-node/register ./src/server.ts",
    "prisma:generate": "prisma generate",
    "migrate:dev": "cp .env.dev .env && prisma migrate dev",
    "migrate:prod": "cp .env.prod .env && prisma migrate deploy",
    "seed:dev": "cp .env.dev .env && prisma db seed",
    "test": "jest"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@supabase/supabase-js": "^2.49.1",
    "cheerio": "^1.1.2",
    "common": "workspace:*",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.5.0",
    "express": "^4.21.2",
    "form-data": "^4.0.2",
    "mailgun.js": "^12.0.1",
    "memjs": "^1.3.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/memjs": "^1.3.3",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^8.0.0",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.4.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0"
  }
}
